#include <stdio.h>
int main()
{
  	char str[100];
  	int i, vowels;
  	i = vowels = 0;
  	printf("\n Please Enter any String :  ");
  	gets(str);
  	while (str[i] != '\0')
  	{
  		if(str[i] == 'a' || str[i] == 'e' || str[i] == 'i' || str[i] == 'o' || str[i] == 'u' ||
		str[i] == 'A' || str[i] == 'E' || str[i] == 'I' || str[i] == 'O' || str[i] == 'U')  
		{
  			vowels++;  	
 		}
    	i++;
	}
    printf("\n Number of Vowels in this String = %d", vowels);  
  	return 0;
}
